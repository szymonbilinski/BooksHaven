<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BooksHaven.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BooksHaven"
    xmlns:views="clr-namespace:BooksHaven.Views"
    Shell.FlyoutBehavior="Flyout"
    Shell.TabBarIsVisible = "False"
    Title="BooksHaven">

    <FlyoutItem Title="Home" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="HomePage"
            ContentTemplate="{DataTemplate views:HomePage}"
            Route="HomePage" />
        <ShellContent
            Title="SearchBookPage"
            ContentTemplate="{DataTemplate views:SearchBookPage}"
            Route="SearchBookPage" />
        <ShellContent
            Title="ReadBookPage"
            ContentTemplate="{DataTemplate views:ReadBookPage}"
            Route="ReadBookPage" />
    </FlyoutItem>
    

</Shell>
