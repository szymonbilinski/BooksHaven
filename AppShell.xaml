<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BooksHaven.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BooksHaven"
    xmlns:views="clr-namespace:BooksHaven.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarIsVisible = "True"
    Title="Books Haven">



    <TabBar Title="Home">
        <ShellContent
            Title="Search for Books"
            ContentTemplate="{DataTemplate views:SearchBookPage}"
            Route="SearchBookPage"
            Icon="search.png"/>
        <ShellContent
            Title="Your Read Books"
            ContentTemplate="{DataTemplate views:ReadBookPage}"
            Route="ReadBookPage" 
            Icon="read.png"/>
    </TabBar>
    

</Shell>
