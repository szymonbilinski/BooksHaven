<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BooksHaven.Views.LocalBookDetailsPage"
             Title="LocalBookDetailsPage">
    <Grid RowDefinitions="Auto, *, Auto, Auto" Padding="20">
        <!-- Book Title -->
        <Label 
            Text="{Binding SelectedBook.Title}" 
            FontSize="20"
            HorizontalOptions="Center"
            Grid.Row="0" />

        <!-- Book Description -->
        <ScrollView Grid.Row="1">
            <Label 
                Text="{Binding SelectedBook.Description}" 
                FontSize="16" 
                TextColor="Gray" />
        </ScrollView>

        <!-- Delete Button -->
        <Button 
            Text="Delete from Library"
            Command="{Binding DeleteBookFromLibraryCommand}"
            IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
            BackgroundColor="Red" 
            TextColor="White"
            Grid.Row="2" />

        <!-- Status Message -->
        <Label 
            Text="{Binding StatusMessage}" 
            TextColor="Green" 
            HorizontalOptions="Center" 
            VerticalOptions="End"
            Grid.Row="3" />
    </Grid>
</ContentPage>