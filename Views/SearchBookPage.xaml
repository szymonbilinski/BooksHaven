<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:BooksHaven.ViewModels"
             x:Class="BooksHaven.Views.SearchBookPage"
             Title="SearchBookPage">
    <ContentPage.Content>
        <!-- Use StackLayout to simplify layout and ensure visibility -->
        <Grid Padding="10" RowDefinitions="Auto,Auto, *" ColumnDefinitions="*">
            <SearchBar Placeholder="Enter book title or author..."
                       Text="{Binding SearchQuery}"
                       Margin="0,0,0,10"
                       HorizontalOptions="FillAndExpand"
                       VerticalOptions="Center" 
                       Grid.Row="0"/>

            <Button Text="Search"
                    Command="{Binding SearchBooksCommand}"
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"
                    Margin="0,10"
                    Grid.Row="1"/>
            <CollectionView ItemsSource="{Binding Books}"
                            VerticalOptions="FillAndExpand"
                            SelectionMode="None"
                            Grid.Row="2"
                            
                            BackgroundColor="Transparent">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Style="{StaticResource BookCardView}">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer CommandParameter="{Binding .}"
                                                      Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:SearchBookPageViewModel}},Path=NavigateToDetailsCommand}"/>
                                
                            </Frame.GestureRecognizers>
                        <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,*,*" ColumnSpacing="5" RowSpacing="0">
                            
                            <Image Source="{Binding Thumbnail}"
                               HeightRequest="120"
                               WidthRequest="100"
                               HorizontalOptions="Start"
                               VerticalOptions="CenterAndExpand"
                               Grid.Column="0"/>
                            <Label Text="{Binding Title}"
                               FontSize="16"
                               FontAttributes="Bold"
                               VerticalOptions="CenterAndExpand"
                               HorizontalOptions="StartAndExpand"
                               Grid.Column="1"/>
                            <Label Text="{Binding Authors}"
                               FontSize="14"
                               TextColor="Gray"
                               VerticalOptions="CenterAndExpand"
                               HorizontalOptions="StartAndExpand"
                               Grid.Column="2"/>
                            
                        </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ContentPage.Content>
</ContentPage>