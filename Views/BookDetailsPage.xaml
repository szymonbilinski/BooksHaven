<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BooksHaven.Views.BookDetailsPage"
             Title="BookDetailsPage">
    <ScrollView>
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto">
            <Button Text="Mark as Read"
                    Command="{Binding AddBookToLibraryCommand}"
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"
                    Margin="0,10"
                    Grid.Row="1"/>
            <Image Source="{Binding CurrentBook.Thumbnail}"
   HeightRequest="120"
   WidthRequest="100"
   HorizontalOptions="Start"
   VerticalOptions="CenterAndExpand"
   Grid.Row="0"/>
        <Label 
            Text="{Binding CurrentBook.Title}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            Grid.Row="1"/>
        <Label 
    Text="{Binding CurrentBook.Authors}"
    VerticalOptions="Center" 
    HorizontalOptions="Center" 
            Grid.Row="2"/>
        <Label 
    Text="{Binding CurrentBook.Description}"
    VerticalOptions="Center" 
    HorizontalOptions="Center" 
            Grid.Row="3"/>
        <Label 
    Text="{Binding CurrentBook.PublishedDate}"
    VerticalOptions="Center" 
    HorizontalOptions="Center" 
            Grid.Row="4"/>
        </Grid>
    </ScrollView>
</ContentPage>