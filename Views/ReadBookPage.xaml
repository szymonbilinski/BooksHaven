<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BooksHaven.Views.ReadBookPage"
             xmlns:viewmodel="clr-namespace:BooksHaven.ViewModels"
             Title="ReadBookPage">
    <ScrollView>
        <Grid RowDefinitions="Auto,*">
            <Button Text="Search"
        Command="{Binding GetLocalBooksCommand}"
        VerticalOptions="Start"
        HorizontalOptions="FillAndExpand"
        Margin="0,10"
        Grid.Row="0"/>

            <CollectionView ItemsSource="{Binding LocalBooks}"
                VerticalOptions="FillAndExpand"
                SelectionMode="None"
                Grid.Row="1"
                
                BackgroundColor="Transparent">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Style="{StaticResource BookCardView}">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer CommandParameter="{Binding .}"
                          Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ReadBookPageViewModel}},Path=GoToDetailsCommand}"/>

                            </Frame.GestureRecognizers>
                            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,*,*" ColumnSpacing="5" RowSpacing="0">

                                <Label Text="{Binding Thumbnail}"
                   HeightRequest="120"
                   WidthRequest="100"
                   HorizontalOptions="Start"
                   VerticalOptions="CenterAndExpand"
                   Grid.Column="0"/>
                                <Label Text="{Binding Title}"
                   FontSize="16"
                   FontAttributes="Bold"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="StartAndExpand"
                   Grid.Column="1"/>
                                <Label Text="{Binding Authors}"
                   FontSize="14"
                   TextColor="Gray"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="StartAndExpand"
                   Grid.Column="2"/>

                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </Grid>
    </ScrollView>
</ContentPage>